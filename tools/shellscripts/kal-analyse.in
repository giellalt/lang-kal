      trace => '--trace',
   },
   {
      cmd => "BIN/kal-hybrid-split LEX/generator-gt-desc.hfstol",
      opt => 'hybrids|hyb',
      test => '| REGTEST_AUTO',
   },
   {
      cmd => "vislcg3 -g ETC/kal-pre2.cg3",
      opt => 'pre2',
      trace => '--trace',
   },
   {
      cmd => "vislcg3 -g ETC/disambiguator.cg3 --no-mappings",
      opt => 'morf',
